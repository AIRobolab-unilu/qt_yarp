<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE devices PUBLIC "-//YARP//DTD robotInterface 1.0//EN" "http://www.icub.org/DTD/robotInterfaceV1.0.dtd">

 <!-- Initialization camera frame grabber using opencv-->
<devices robot="Cuddie01" build="1">
  <device name="camera_opencv" type="grabber">
    <param name="subdevice">   opencv_grabber </param>
    <param name="name"> /cuddie/camera </param>
    <param name="camera">    0   </param>
    <param name="width">     640 </param>
    <param name="height">    480 </param> 
    <param name="framerate"> 10  </param>
  </device>
</devices>

